<div class="resident-myreview">
  <div class="myreview-info">
    <p class="hidden"><%= review.agentList_ra_regno %></p>
    <div class="layout-row" onclick="location.href='../realtor/<%=review.agentList_ra_regno%>';" style="min-width:max-content">
      <h3><%= review.cmp_nm %></h3>
      <div class="layout-row">
        <% for( let index = 0; index < 5; index++ ) { %>
        <% if (index < review.rating) { %>
        <p>★</p>
        <% } else { %>
        <p>☆</p>
        <% } %>
        <% } %>
      </div>
    </div>

    <p class="myreview-address"><%= review.address %></p>
    <div class="layout-row">
      <p class="myreview-date"><%= `${Intl.DateTimeFormat("fr-CA", {year: "numeric", month: "2-digit", day: "2-digit"}).format(review.created_time)}` %>
        <% if (mine) { %>
        작성 | <button class="uk-button uk-button-default" onclick="location.href='../review/<%= review.rv_id %>/update';">수정</button>
        <% } else { %>
        열람
        <% } %>
      </p>
    </div>
  </div>


  <div class="myreview-content">
    <div class="layout-row" style="flex-wrap:wrap">
      <% review.tags.split("").forEach((element, index) => { %>
      <span class="uk-label" style="margin-right:5px;margin-bottom:5px;"><%= tagsData.tags[element] %></span>
      <% }) %>
    </div>
    <%= review.content %>
  </div>
</div>